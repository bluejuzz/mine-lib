<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color_dedede"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.skylink.android.commonlibrary.ui.AppHeader
        xmlns:header="http://schemas.android.com/apk/res-auto"
        android:id="@+id/changepassword_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        header:left="1"
        header:right="2"
        header:backgroundColor="@color/color_0068ff"
        header:text_title="修改密码" />

    <View  android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="#f5f5f5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/color_ffffff"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原  密  码"
                android:textColor="@color/color_686868"
                android:textSize="@dimen/font_size_17" />

            <com.skylink.android.commonlibrary.ui.ClearEditText
                android:id="@+id/changepassword_edit_opassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginRight="@dimen/dp_12"
                android:background="@null"
                android:hint="请输入原密码"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:maxLength="20"
                android:maxLines="1"
                android:textColor="@color/color_686868"
                android:textColorHint="@color/color_cdcdcd"
                android:textSize="@dimen/font_size_17" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/color_ffffff"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dip"
            android:background="@color/color_b2b2b2"/>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新  密  码"
                android:textColor="@color/color_686868"
                android:textSize="@dimen/font_size_17" />

            <com.skylink.android.commonlibrary.ui.ClearEditText
                android:id="@+id/changepassword_edit_npassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginRight="@dimen/dp_12"
                android:background="@null"
                android:hint="密码必须为6-20个字符"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:maxLength="20"
                android:maxLines="1"
                android:textColor="@color/color_686868"
                android:textColorHint="@color/color_cdcdcd"
                android:textSize="@dimen/font_size_17" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dip"
        android:background="@color/color_b2b2b2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/color_ffffff"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认密码"
                android:textColor="@color/color_686868"
                android:textSize="@dimen/font_size_17" />

            <com.skylink.android.commonlibrary.ui.ClearEditText
                android:id="@+id/changepassword_edit_rpassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginRight="@dimen/dp_12"
                android:background="@null"
                android:hint="重新输入新密码"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:maxLength="20"
                android:maxLines="1"
                android:textColor="@color/color_686868"
                android:textColorHint="@color/color_cdcdcd"
                android:textSize="@dimen/font_size_17" />
        </LinearLayout>
    </LinearLayout>

    <CheckBox
        android:id="@+id/changepassword_img_show_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_20"
        android:checked="false"
        android:background="@drawable/check_box_show_password"
        android:button="@null" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/changepassword_button_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_40"
            android:background="@drawable/select_minebuttonlong_click"
            android:text="确认修改"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/font_size_20" />
    </LinearLayout>
</LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/transparent"
              android:orientation="vertical"
              android:padding="@dimen/dp_20">

    <RadioGroup
        android:id="@+id/dlg_rg_select_net_type"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@drawable/border_write_gray"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dp_13">

        <RadioButton
            android:id="@+id/dlg_rb_type_no_auto"
            style="@style/radiobutton"
            android:checked="true"
            android:text="不自动下载"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.66"
            android:background="@color/color_b2b2b2"/>

        <RadioButton
            android:id="@+id/dlg_rb_type_wifi"
            style="@style/radiobutton"
            android:text="仅WIFI环境下"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.66"
            android:background="@color/color_b2b2b2"/>

        <RadioButton
            android:id="@+id/dlg_rb_type_mobile"
            style="@style/radiobutton"
            android:text="移动网络(含WIFI状态)"/>
    </RadioGroup>


</LinearLayout>